<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/cardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_review_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profileGameTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profileConsoleOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Game Title" />

        <TextView
            android:id="@+id/profileGameReleaseYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="MMMM" />

        <ImageView
            android:id="@+id/profileConsoleOne"
            android:layout_width="@dimen/listConsoleIconSize"
            android:layout_height="@dimen/listConsoleIconSize"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/consoleIcon"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profileConsoleTwo"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_downloading" />

        <ImageView
            android:id="@+id/profileConsoleTwo"
            android:layout_width="@dimen/listConsoleIconSize"
            android:layout_height="@dimen/listConsoleIconSize"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/consoleIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profileConsoleThree"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_downloading" />

        <ImageView
            android:id="@+id/profileConsoleThree"
            android:layout_width="@dimen/listConsoleIconSize"
            android:layout_height="@dimen/listConsoleIconSize"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/consoleIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profileConsoleFour"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_downloading" />

        <ImageView
            android:id="@+id/profileConsoleFour"
            android:layout_width="@dimen/listConsoleIconSize"
            android:layout_height="@dimen/listConsoleIconSize"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/consoleIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profileGameReleaseYear"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_downloading" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>